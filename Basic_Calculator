import tkinter as tk
from tkinter.constants import DISABLED, LEFT

##basic operations, function definition
def adde():
    result.set(float(num1.get())+ float(num2.get()))
    
def subtract():
    result.set(float(num1.get()) - float(num2.get()))
    
def multiply():
    result.set(float(num1.get()) * float(num2.get()))
    
def division():
    result.set(float(num1.get()) / float(num2.get()))

def clean():
    result.set('')
    num1.set('')
    num2.set('')

##setting...Frame
root = tk.Tk()
root.title("calculator")
root.geometry("400x200")
root.resizable(width=False, height=False)

##variable
num1 = tk.StringVar()
num2 = tk.StringVar()
result= tk.StringVar()

##labels and text box
tk.Label(root, text="number 1").pack()
tk.Entry(root,justify="center", textvariable=num1).pack()

tk.Label(root,text="number 2").pack()
tk.Entry(root,justify="center", textvariable=num2).pack()

tk.Label(root,text="Result").pack()
tk.Entry(root,justify="center", textvariable=result, state=DISABLED).pack()

tk.Label(root).pack() 

##buttons with operations
tk.Button(root, text="add", command=adde).pack(side=LEFT)
tk.Button(root, text="subtract", command=subtract).pack(side=LEFT)
tk.Button(root, text="multiply",command=multiply).pack(side=LEFT)
tk.Button(root, text="division", command=division).pack(side=LEFT)
tk.Button(root, text="clean", command=clean).pack(side=LEFT)

#Final
root.mainloop()
